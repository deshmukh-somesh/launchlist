generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id
  email         String         @unique
  name          String?
  username      String         @unique
  bio           String?
  avatarUrl     String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  website       String?
  twitter       String?
  github        String?
  collections   Collection[]
  comments      Comment[]
  following     Follows[]      @relation("follower")
  followers     Follows[]      @relation("following")
  notifications Notification[]
  products      Product[]
  votes         Vote[]
}

model Product {
  id          String                  @id @default(cuid())
  name        String
  slug        String                  @unique
  tagline     String
  description String
  website     String
  thumbnail   String?
  pricing     PricingType             @default(FREE)
  launchDate  DateTime
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  isLaunched  Boolean                 @default(false)
  makerId     String
  categories  CategoriesOnProducts[]
  collections CollectionsOnProducts[]
  comments    Comment[]
  maker       User                    @relation(fields: [makerId], references: [id])
  images      ProductImage[]
  votes       Vote[]
}

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model Category {
  id            String                 @id @default(cuid())
  name          String                 @unique
  description   String?
  order         Int                    @default(0) // Add this
  parentId      String? // Add this
  updatedAt     DateTime               @updatedAt
  products      CategoriesOnProducts[]
  parent        Category?              @relation("CategoryHierarchy", fields: [parentId], references: [id]) // Add this
  subcategories Category[]             @relation("CategoryHierarchy") // Add this
}

model CategoriesOnProducts {
  productId  String
  categoryId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  category   Category @relation(fields: [categoryId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])

  @@id([productId, categoryId])
}

model Comment {
  id        String    @id @default(cuid())
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  productId String
  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  product   Product   @relation(fields: [productId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
}

model Collection {
  id          String                  @id @default(cuid())
  name        String
  description String?
  isPublic    Boolean                 @default(true)
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  userId      String
  user        User                    @relation(fields: [userId], references: [id])
  products    CollectionsOnProducts[]
}

model CollectionsOnProducts {
  collectionId String
  productId    String
  addedAt      DateTime   @default(now())
  collection   Collection @relation(fields: [collectionId], references: [id])
  product      Product    @relation(fields: [productId], references: [id])

  @@id([collectionId, productId])
}

model Follows {
  followerId  String
  followingId String
  createdAt   DateTime @default(now())
  follower    User     @relation("follower", fields: [followerId], references: [id])
  following   User     @relation("following", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  content   String
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  userId    String
  user      User             @relation(fields: [userId], references: [id])
}

model FileUpload {
  id        String   @id @default(cuid())
  key       String   @unique
  name      String
  url       String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PricingType {
  FREE
  PAID
  SUBSCRIPTION
}

enum NotificationType {
  COMMENT
  VOTE
  FOLLOW
  PRODUCT_LAUNCH
  COLLECTION_MENTION
}
